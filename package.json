{
  "name": "attend-backend",
  "version": "1.0.0",
  "description": "Backend API para sistema de atendimento",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:clean": "drizzle-kit drop",
    "db:reset": "npm run db:clean && npm run db:push"
  },
  "keywords": [
    "api",
    "backend",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "better-auth": "^1.3.7",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "fastify": "^4.29.1",
    "fastify-type-provider-zod": "^6.0.0",
    "pg": "^8.16.3",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.55.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0"
  }
}
